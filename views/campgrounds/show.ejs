<% layout('layouts/boilerplate') %> 
<!-- 위 경로의 ejs파일을 불러오기 -->
<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img class="card-image-top" src="<%= a_campground.image %>" alt="<%= a_campground.image %>">
      <div class="card-body">
        <h5 class="card-title"><%= a_campground.title %></h5>
        <p class="card-text"><%= a_campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= a_campground.location %></li>
        <li class="list-group-item">₩<%= a_campground.price %>/night</li>
      </ul>
      <div class="card-body d-flex">
        <a href="/campgrounds/<%= a_campground._id %>/edit" class="card-link btn btn-warning" style="display: inline-block; margin-right: 20px;">Edit</a>
        <form action="/campgrounds/<%= a_campground._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">
        <a href="/campgrounds">Back</a>
      </div>
      <h2>Leave a Review</h2>
      <form action="/campgrounds/<%= a_campground._id %>/reviews" method="POST" novalidate class="mb-3 validated-form">
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" name="review[rating]" id="rating" type="range" min="1" max="5">
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review:</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="5" required></textarea>
          <div class="valid-feedback">
            Thank you for your review!
          </div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>